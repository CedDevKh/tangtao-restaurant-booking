# Django backend example .env (copy to backend/core/.env)
SECRET_KEY=change-me
DEBUG=True
# Replace with your LAN IP so other devices can reach it
ALLOWED_HOSTS=localhost,127.0.0.1,http://192.168.0.127/
# If you want to explicitly list allowed origins (otherwise rely on CORS_ALLOW_ALL_ORIGINS in dev)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://192.168.0.127:3000
CORS_ALLOW_ALL_ORIGINS=True
DJANGO_LOG_LEVEL=INFO
# Optional Postgres (uncomment when needed)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
