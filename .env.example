############################################################
# Example Environment Variables (Backend + Frontend)
# Copy to .env (backend/core/.env) and frontend/.env.local as needed
############################################################

# === Django Backend ===
SECRET_KEY=change-me
DEBUG=True

# Comma-separated hostnames / IPs the backend will accept. Include LAN IP for other devices on Wi-Fi.
# Example LAN_IP below â€“ replace with the output of ipconfig (IPv4 Address).
ALLOWED_HOSTS=localhost,127.0.0.1,LAN_IP

# CORS: during local dev you can allow all OR specify the frontend origins.
# If you keep DEBUG=True you may rely on CORS_ALLOW_ALL_ORIGINS=True (set below) for simplicity.
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://LAN_IP:3000
CORS_ALLOW_ALL_ORIGINS=True

# Database (set only if using Postgres in prod)
# DATABASE_URL=postgresql://username:password@host:port/database

DJANGO_LOG_LEVEL=INFO

# === Frontend (Next.js) ===
# Provide backend base URL (no trailing slash required; our code trims it). Use LAN IP so phones/tablets can reach it.
NEXT_PUBLIC_BACKEND_API_URL=http://LAN_IP:8000

# In production replace LAN_IP with your public domain and set DEBUG=False above, also adjust CORS_ALLOWED_ORIGINS.

############################################################
# Notes:
# 1. Replace LAN_IP everywhere with your actual local network IP (e.g. 192.168.1.42).
# 2. Start Django bound to 0.0.0.0:  python manage.py runserver 0.0.0.0:8000
# 3. Ensure Windows Firewall allows inbound on 8000.
# 4. Restart Next.js after changing .env.local.
############################################################
